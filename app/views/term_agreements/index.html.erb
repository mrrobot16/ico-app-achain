<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Shareholder address</th>
      <th>Term accepted</th>
      <th>Terms counter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @term_agreements.each do |term_agreement| %>
      <tr>
        <td><%= term_agreement.shareholder_address %></td>
        <td><%= term_agreement.term_accepted %></td>
        <td><%= term_agreement.counter %></td>
        <td><%= link_to 'Show', term_agreement %></td>
        <td><%= link_to 'Edit', edit_term_agreement_path(term_agreement) %></td>
        <td><%= link_to 'Destroy', term_agreement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

